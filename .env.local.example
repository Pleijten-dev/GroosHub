# Google Places API Key (for amenities search)
GOOGLE_PLACES_API_KEY=your_google_places_api_key_here

# Altum AI API Key (for housing market/residential data)
# Get your API key from: https://mopsus.altum.ai
# Supported variable names: Altum_AI_Key, ALTUM_AI_KEY, NEXT_PUBLIC_ALTUM_AI_KEY
Altum_AI_Key=your_altum_ai_api_key_here

# PostgreSQL Database (for user authentication and data storage)
# Use the pooling connection URL for better performance
POSTGRES_URL=your_postgres_connection_url_here
# Use the non-pooling connection URL for transactions
POSTGRES_URL_NON_POOLING=your_postgres_non_pooling_connection_url_here

# NextAuth Configuration (for user authentication)
# Generate a secret using: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret_here
# Set to your application URL in production
NEXTAUTH_URL=http://localhost:3000

# Encryption Configuration (for chat message encryption)
# Generate a secure key using: openssl rand -base64 32
# IMPORTANT: Keep this key secret and never commit it to version control
ENCRYPTION_MASTER_KEY=your_encryption_master_key_here

# AI Chat Configuration (for AI Assistant feature)
# Multiple AI providers are supported. At least one API key is required.

# OpenAI API Key (for GPT models)
# Get your API key from: https://platform.openai.com
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (for Claude models)
# Get your API key from: https://console.anthropic.com
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Generative AI API Key (for Gemini models)
# Get your API key from: https://aistudio.google.com/apikey
GOOGLE_GENERATIVE_AI_API_KEY=your_google_ai_api_key_here

# Mistral API Key (for Mistral models)
# Get your API key from: https://console.mistral.ai
MISTRAL_API_KEY=your_mistral_api_key_here

# xAI API Key (for Grok models)
# Get your API key from: https://console.x.ai
XAI_API_KEY=your_xai_api_key_here

# Cloudflare R2 Storage (for file uploads - images, PDFs)
# Get credentials from: https://dash.cloudflare.com → R2 → Manage R2 API Tokens
# Create a bucket and API token with read/write permissions
R2_ACCOUNT_ID=your_r2_account_id_here
R2_ACCESS_KEY_ID=your_r2_access_key_id_here
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key_here
R2_BUCKET_NAME=grooshub-chat-files
R2_PUBLIC_URL=https://your-bucket.r2.cloudflarestorage.com

# Cron Job Secret (for automated cleanup tasks)
# Generate a secure secret using: openssl rand -base64 32
# Used by Vercel Cron or external cron jobs to authenticate cleanup requests
CRON_SECRET=your_cron_secret_here
